<h1>Create a New task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
   <%= f.check_box :completed %> <br />
  <%= f.label :completed, "Completed" %>
  <%= f.submit %>
<% end %>

<%= link_to "back to Tasks", tasks_path%>
